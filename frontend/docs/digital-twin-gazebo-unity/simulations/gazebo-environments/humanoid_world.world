<?xml version="1.0" ?>
<sdf version="1.7">
  <world name="humanoid_simulation">
    <!-- Include the default ground plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Include the default sun -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Physics engine configuration -->
    <physics type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
      <real_time_update_rate>1000.0</real_time_update_rate>
      <gravity>0 0 -9.8</gravity>
    </physics>

    <!-- Simple humanoid robot model -->
    <model name="simple_humanoid">
      <!-- Main body -->
      <link name="torso">
        <pose>0 0 1.0 0 0 0</pose>
        <collision name="torso_collision">
          <geometry>
            <box>
              <size>0.3 0.2 0.5</size>
            </box>
          </geometry>
        </collision>
        <visual name="torso_visual">
          <geometry>
            <box>
              <size>0.3 0.2 0.5</size>
            </box>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
          </material>
        </visual>
        <inertial>
          <mass>10.0</mass>
          <inertia>
            <ixx>0.5</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.6</iyy>
            <iyz>0.0</iyz>
            <izz>0.3</izz>
          </inertia>
        </inertial>
      </link>

      <!-- Head -->
      <link name="head">
        <pose>0 0 0.3 0 0 0</pose>
        <collision name="head_collision">
          <geometry>
            <sphere>
              <radius>0.1</radius>
            </sphere>
          </geometry>
        </collision>
        <visual name="head_visual">
          <geometry>
            <sphere>
              <radius>0.1</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.5 0.5 0.5 1</diffuse>
          </material>
        </visual>
        <inertial>
          <mass>2.0</mass>
          <inertia>
            <ixx>0.02</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.02</iyy>
            <iyz>0.0</iyz>
            <izz>0.02</izz>
          </inertia>
        </inertial>
      </link>

      <!-- Connect torso and head -->
      <joint name="neck_joint" type="revolute">
        <parent>torso</parent>
        <child>head</child>
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <lower>-1.57</lower>
            <upper>1.57</upper>
          </limit>
        </axis>
      </joint>

      <!-- Left leg -->
      <link name="left_thigh">
        <pose>-0.1 0 0.2 0 0 0</pose>
        <collision name="left_thigh_collision">
          <geometry>
            <cylinder>
              <radius>0.05</radius>
              <length>0.4</length>
            </cylinder>
          </geometry>
        </collision>
        <visual name="left_thigh_visual">
          <geometry>
            <cylinder>
              <radius>0.05</radius>
              <length>0.4</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.3 0.3 1.0 1</ambient>
            <diffuse>0.3 0.3 1.0 1</diffuse>
          </material>
        </visual>
        <inertial>
          <mass>3.0</mass>
          <inertia>
            <ixx>0.05</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.05</iyy>
            <iyz>0.0</iyz>
            <izz>0.01</izz>
          </inertia>
        </inertial>
      </link>

      <joint name="left_hip_joint" type="revolute">
        <parent>torso</parent>
        <child>left_thigh</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit>
            <lower>-1.57</lower>
            <upper>1.57</upper>
          </limit>
        </axis>
      </joint>

      <!-- Right leg -->
      <link name="right_thigh">
        <pose>0.1 0 0.2 0 0 0</pose>
        <collision name="right_thigh_collision">
          <geometry>
            <cylinder>
              <radius>0.05</radius>
              <length>0.4</length>
            </cylinder>
          </geometry>
        </collision>
        <visual name="right_thigh_visual">
          <geometry>
            <cylinder>
              <radius>0.05</radius>
              <length>0.4</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.3 0.3 1.0 1</ambient>
            <diffuse>0.3 0.3 1.0 1</diffuse>
          </material>
        </visual>
        <inertial>
          <mass>3.0</mass>
          <inertia>
            <ixx>0.05</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.05</iyy>
            <iyz>0.0</iyz>
            <izz>0.01</izz>
          </inertia>
        </inertial>
      </link>

      <joint name="right_hip_joint" type="revolute">
        <parent>torso</parent>
        <child>right_thigh</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit>
            <lower>-1.57</lower>
            <upper>1.57</upper>
          </limit>
        </axis>
      </joint>

      <!-- Sensors -->
      <gazebo reference="torso">
        <sensor name="camera1" type="camera">
          <pose>0.15 0 0.2 0 0 0</pose>
          <camera name="head_camera">
            <horizontal_fov>1.047</horizontal_fov>
            <image>
              <width>640</width>
              <height>480</height>
              <format>R8G8B8</format>
            </image>
            <clip>
              <near>0.1</near>
              <far>10.0</far>
            </clip>
          </camera>
          <always_on>true</always_on>
          <update_rate>30.0</update_rate>
        </sensor>

        <sensor name="imu_sensor" type="imu">
          <always_on>true</always_on>
          <update_rate>100.0</update_rate>
        </sensor>
      </gazebo>
    </model>

    <!-- Simple obstacles -->
    <model name="box_obstacle">
      <pose>2 0 0.5 0 0 0</pose>
      <link name="box_link">
        <collision name="box_collision">
          <geometry>
            <box>
              <size>0.5 0.5 1.0</size>
            </box>
          </geometry>
        </collision>
        <visual name="box_visual">
          <geometry>
            <box>
              <size>0.5 0.5 1.0</size>
            </box>
          </geometry>
          <material>
            <ambient>1.0 0.0 0.0 1</ambient>
            <diffuse>1.0 0.0 0.0 1</diffuse>
          </material>
        </visual>
        <inertial>
          <mass>5.0</mass>
          <inertia>
            <ixx>0.5</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.5</iyy>
            <iyz>0.0</iyz>
            <izz>0.5</izz>
          </inertia>
        </inertial>
      </link>
    </model>
  </world>
</sdf>